<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane hgap="10" vgap="15" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.consulado.consulado.controllers.trabajo.InsertViewController">
   <padding>
      <Insets top="20" right="20" bottom="20" left="20"/>
   </padding>

   <Button onAction="#goBack" text="Back" GridPane.rowIndex="0" GridPane.columnIndex="0"/>

   <Label text="Codigo" GridPane.rowIndex="1" GridPane.columnIndex="0" />
   <TextField fx:id="codigoField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

   <Label text="Nombre" GridPane.rowIndex="2" GridPane.columnIndex="0" />
   <TextField fx:id="nombreField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

   <Label text="Pasaporte" GridPane.rowIndex="3" GridPane.columnIndex="0" />
   <TextField fx:id="pasaporteField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

   <Label text="Fecha Viaje" GridPane.rowIndex="4" GridPane.columnIndex="0" />
   <TextField fx:id="fechaViajeField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

   <Label text="Semanas" GridPane.rowIndex="5" GridPane.columnIndex="0" />
   <TextField fx:id="semanasField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

   <Label text="Motivo" GridPane.rowIndex="6" GridPane.columnIndex="0" />
   <TextArea fx:id="motivoField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

   <Label text="Entidad Contratadora" GridPane.rowIndex="7" GridPane.columnIndex="0" />
   <TextField fx:id="entidadContratadoraField" GridPane.rowIndex="7" GridPane.columnIndex="1" />

   <Label text="Tipo de Trabajo" GridPane.rowIndex="8" GridPane.columnIndex="0" />
   <TextField fx:id="tipoTrabajoField" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

   <Label text="Tarifa por Horas" GridPane.rowIndex="9" GridPane.columnIndex="0" />
   <TextField fx:id="tarifaHorasField" GridPane.rowIndex="9" GridPane.columnIndex="1"/>

   <Label text="Horas Laborables" GridPane.rowIndex="10" GridPane.columnIndex="0" />
   <TextField fx:id="horasLaborablesField" GridPane.rowIndex="10" GridPane.columnIndex="1"/>

   <Button mnemonicParsing="false" onAction="#InsertNewTrabajo" text="Agregar Trabajo" GridPane.rowIndex="11" GridPane.columnIndex="0"/>
</GridPane>
